<h1>Editing Book</h1>

<div class="edit">
       <% if @book.errors.any? %>
            <%= @book.errors.count %>件のerrorが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>

            <li><%= message %></li>

            <% end %>

          </ul>
        <% end %>
<%= form_with model:@book,local:true do |f| %>

      <p><%= f.label :title,"Title"%></p>
      <%= f.text_field :title %>

      <p><%= f.label :body,"Body" %></p>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Update Book' %>

    <% end %>


   <span><%= link_to "Show",book_path(@book.id) %></span>
  |
  <span><%= link_to "Back",books_path %></span>
 </div>